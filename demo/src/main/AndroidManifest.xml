<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hiphonezhu.test.demo">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>


    <application android:name=".MyDroid"
        android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|navigation"
            android:windowSoftInputMode="adjustPan|stateVisible|adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityDemo"/>
        <activity android:name=".ActivityDemo2"/>
        <activity android:name=".ActivityDemo3"/>
    </application>

</manifest>
