<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 自定义dialog -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Activity全透明样式-->
    <style name="ActivityTransparentTheme" parent="@style/BaseAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- App theme -->
    <style name="AppTheme" parent="@style/BaseAppTheme"></style>

    <!-- 公共属性-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
</resources>
